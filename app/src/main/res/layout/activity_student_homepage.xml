<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Dashboard -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_dashboard_background"
            android:elevation="8dp"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/tv_welcome_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/welcome_message"
                android:textAppearance="@style/TextAppearance.App.Title" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_assignments"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/assignments"
                        android:textAppearance="@style/TextAppearance.App.Headline" />

                    <TextView
                        android:id="@+id/tv_assignments_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/placeholder_count"
                        android:textAppearance="@style/TextAppearance.App.Body" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_upcoming_exams"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/upcoming_exams"
                        android:textAppearance="@style/TextAppearance.App.Headline" />

                    <TextView
                        android:id="@+id/tv_upcoming_exams_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/placeholder_count"
                        android:textAppearance="@style/TextAppearance.App.Body" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_grades"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/grades"
                        android:textAppearance="@style/TextAppearance.App.Headline" />

                    <TextView
                        android:id="@+id/tv_grades_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/placeholder_count"
                        android:textAppearance="@style/TextAppearance.App.Body" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Dashboard Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/rounded_background"
            android:elevation="8dp"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/tv_student_actions_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/student_actions"
                android:textAppearance="@style/TextAppearance.App.Title" />

            <Button
                android:id="@+id/btn_view_assignments"
                style="@style/Widget.App.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/view_assignments" />

            <Button
                android:id="@+id/btn_view_exams"
                style="@style/Widget.App.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/view_exams" />

            <Button
                android:id="@+id/btn_view_grades"
                style="@style/Widget.App.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/view_grades" />

            <Button
                android:id="@+id/btn_settings"
                style="@style/Widget.App.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/settings" />

            <Button
                android:id="@+id/btn_log_out"
                style="@style/Widget.App.Button.Outlined.Error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/log_out" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
